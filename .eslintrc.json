{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"prettier/prettier": [
			"error",
			{
				"prientWidth": 80,
				"trailingComma": "es5",
				"semi": true,
				"jsxSingleQuote": true,
				"singleQuote": true,
				"useTabs": true,
				"endOfLine": "auto",
				"arrowParens": "avoid"
			}
		]
	}
}
